<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url('<%= asset_path('salle.jpg') %>')">
  <div class="container">
    <h1 class="title text-warning"><strong>Movie List</strong>!</h1>
    <%= link_to 'create', new_list_path, class:'btn btn-warning'%>
  </div>
</div>

<div class="container">
  <div class="row mt-3 mb-3">
    <% @lists.each do |list| %>
      <div class="col-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= link_to list.name, list_path(list), class:'text-warning'%>
          </div>
      </div>
    <% end %>
  </div>
</div>
