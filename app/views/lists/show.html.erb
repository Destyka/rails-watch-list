<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1 class="texte-warning">List Movie</h1>
    <%= link_to "add a movie", new_list_bookmark_path(@list), class:"btn btn-warning"%>
  </div>
</div>



<div class="container">
  <div class="row mb-3 mt-3">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(movie: movie, list: @list) %>
      <div class="col-4">
        <div class="card-trip">
          <img src=<%= movie.poster_url %> />
          <div class="card-trip-infos">
            <div>
              <h2><%= @list.name %></h2>
              <p><%= movie.title %></p>
              <p><%= movie.overview %></p>
              <p class="comment mt-1"><i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %></p>
            </div>
            <%= link_to "delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "text-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
  <%= link_to "add a movie", new_list_bookmark_path(@list), class:"btn btn-flat"%>
